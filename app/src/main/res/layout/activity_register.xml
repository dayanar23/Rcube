<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#084B8A"
    tools:context="com.example.dayana.myapplication.Register"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rcube"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/radioButton"
            android:id="@+id/rgroup">

            <RadioButton
                android:text="Person"
                android:buttonTint="#ffffff"
                android:textColor="#ffffff"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton" />

            <RadioButton
                android:text="Organization"
                android:buttonTint="#ffffff"
                android:layout_toRightOf="@id/radioButton"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2" />
        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#00BFFF"
                app:srcCompat="@drawable/ic_action_social_person"
                android:id="@+id/imageView6" />

            <EditText
                android:id="@+id/name"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#00BFFF"
                app:srcCompat="@drawable/ic_action_content_mail"
                android:id="@+id/imageView7" />

            <EditText
                android:id="@+id/email"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_toEndOf="@+id/imageView7" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#00BFFF"
                app:srcCompat="@drawable/ic_action_communication_call"
                android:id="@+id/imageView1" />

            <EditText
                android:id="@+id/tlf"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Telephone"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:inputType="phone"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_toEndOf="@+id/imageView1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#00BFFF"
                app:srcCompat="@drawable/ic_action_action_https"
                android:id="@+id/imageView2" />

            <EditText
                android:id="@+id/password"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Password"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#00BFFF"
                app:srcCompat="@drawable/ic_action_action_https"
                android:id="@+id/imageView3" />

            <EditText
                android:id="@+id/cpassword"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Confirm password"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3" />
        </RelativeLayout>

        <Button
            android:id="@+id/send_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#04B404"
            android:text="Sig Up"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By signing up your are accepting our terms"
        android:textColor="#ffffff"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:id="@+id/textViewP" />
</LinearLayout>
