<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_list_conv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#084B8A">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/content"
        android:background="#084B8A"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#084B8A"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:id="@+id/vUserProfileRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#084B8A"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingBottom="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="24dp"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false">

                        <ImageView
                            android:id="@+id/ProfilePhoto"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            android:background="#ffffff"
                            android:src="@drawable/apple"
                            android:layout_marginRight="16dp" />

                        <LinearLayout
                            android:id="@+id/vUserDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Blue Fruit Corp"
                                android:textColor="#ffffff"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/useremail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="\@bluefriut"
                                android:textColor="#bbbbbb"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/userphone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Searching for a good life."
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btn_edit"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_marginTop="8dp"
                                android:background="#04B404"
                                android:text="Edit profile"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#01bcd5"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="112dp"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="56dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="#01bcd5"
                        android:src="@drawable/recycle"
                        android:id="@+id/imageView" />

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="56dp"
                        android:text="1024"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:id="@+id/textView2"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView"
                        android:layout_toEndOf="@+id/imageView" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="112dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="56dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="#01bcd5"
                        android:src="@drawable/forest"
                        android:id="@+id/imageView13" />

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="56dp"
                        android:text="223"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:id="@+id/textView5"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView13"
                        android:layout_toEndOf="@+id/imageView13" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="112dp"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="56dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="#01bcd5"
                        android:src="@drawable/whale"
                        android:id="@+id/imageView12" />

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="56dp"
                        android:text="142"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:id="@+id/textView6"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView12"
                        android:layout_toEndOf="@+id/imageView12" />

                </RelativeLayout>

            </LinearLayout>



        </android.support.design.widget.AppBarLayout>



    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp"
        android:background="#084B8A">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/conv1"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_height="56dp"
                android:hint="Blue Fruit Corp \n 0500-4533456"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/imageView6"
                android:layout_toStartOf="@+id/imageView6" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#04B404"
                android:clickable="true"
                android:src="@drawable/ic_action_navigation_close"
                android:id="@+id/imageView1"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:clickable="true"
                android:background="#04B404"
                android:src="@drawable/ic_action_content_create"
                android:id="@+id/imageView6"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView1"
                android:layout_toStartOf="@+id/imageView1" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/conv2"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="56dp"
                android:hint="Blue Fruit Corp \n 0500-4533456"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/imageView7"
                android:layout_toStartOf="@+id/imageView7" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:clickable="true"
                android:background="#04B404"
                android:src="@drawable/ic_action_navigation_close"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#04B404"
                android:clickable="true"
                android:src="@drawable/ic_action_content_create"
                android:id="@+id/imageView7"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/conv3"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="56dp"
                android:hint="Blue Fruit Corp \n 0500-4533456"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/imageView71"
                android:layout_toStartOf="@+id/imageView71" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:clickable="true"
                android:background="#04B404"
                android:src="@drawable/ic_action_navigation_close"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#04B404"
                android:clickable="true"
                android:src="@drawable/ic_action_content_create"
                android:id="@+id/imageView71"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Previous page "
                android:textColor="#ffffff"
                android:clickable="true"
                android:id="@+id/pbutton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:text="  Next page  "
                android:textColor="#ffffff"
                android:clickable="true"
                android:id="@+id/nbutton"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
